<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Game Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Game Reviews", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navLink">@Html.ActionLink("Game List", "Index", "Games")</li>
                </ul>


                @Html.Partial("_LoginPartial")

                <div class="nav navbar-nav navbar-right filterList">
                    @*@using (Html.BeginForm())
                    {*@
                        <form id="gameFilterForm" action="/Games/Index/gameFilterForm" method="post">
                            <div id="FilterSearch" class="col-sm-6 form-horizontal">
                                @Html.Label("Search by Name", htmlAttributes: new { @class = "control-label col-sm-6", @id = "searchLabel" })
                                @Html.TextBox("searchCriteria", null, new { @class = "form-control col-sm-6" })
                            </div>
                            <div class="col-sm-6 form-group">
                                @Html.Label("Filter by Platform", htmlAttributes: new { @class = "control-label col-sm-6", @id = "filterLabel" })
                                @Html.DropDownList("platformFilter", new SelectList(ViewBag.Platforms), "All Platforms", new { @class = "form-control col-sm-6" })
                            </div>
                        </form>


                    @*}*@
                </div>

            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
    </div>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <footer>
        <p>&copy; @DateTime.Now.Year - Player Game Reviews</p>
    </footer>
</body>
</html>
