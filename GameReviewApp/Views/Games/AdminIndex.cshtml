@model IEnumerable<GameReviewApp.Models.Game>
@{
    ViewBag.Title = "Administrative Game Index";
    Layout = "../Shared/_LayoutIndex.cshtml";
}


<p>
        @Html.ActionLink("Create New", "Create")
    </p>
<div>
    @if (ViewBag.platformChoice == "" || ViewBag.platformChoice == null)
    {
        <p class="platformLabel">
            All Platforms
        </p>
    }
    else
    {
        <p class="platformLabel">
            @ViewBag.platformChoice
        </p>
    }
</div>

<div class="tableContainer">
    <table class="table">
        <tr>
            <th class="gameTable thumbCell">
            </th>
            <th class="gameTable nameHeader" align="center">
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Name).ToHtmlString(), "Index", new { sortOrder = "Name" })
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Release)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Platform)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Thumbnail)
                </th>*@
            <th class="gameTable ratingCell">
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Rating).ToHtmlString(), "Index", new { sortOrder = "Rating" })
            </th>
            @*<th></th>*@
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="gameTable thumbCell">
                    <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" width="128" height="128" alt="Thumbnail" />
                </td>
                <td class="gameTable nameCell" align="center">
                    @{
                        string name = item.Name;
                    }
                    @Html.ActionLink(name, "Details", new { id = item.Id })
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Release)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Platform)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>*@
                <td class="gameTable ratingCell" align="center" valign="middle">
                    <p>@Html.DisplayFor(modelItem => item.Rating)/10</p>
                </td>
                <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
            </tr>
        }
    </table>
</div>