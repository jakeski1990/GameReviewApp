@model IEnumerable<GameReviewApp.Models.Game>
@{
    ViewBag.Title = "Administrative Game Index";
    Layout = "../Shared/_Layout.cshtml";
}
<p>
</p>
<div>
    @if (ViewBag.platformChoice == "" || ViewBag.platformChoice == null)
    {
        <p class="platformLabel">
            All Platforms
        </p>
    }
    else
    {
        <p class="platformLabel">
            @ViewBag.platformChoice
        </p>
    }
</div>

<div class="col-md-12 fullGameTable">
    <div class="row">
        <div class="col-sm-12" style="text-align:center;">
            @Html.ActionLink("Create New", "Create", null, new { @class = "customButton"})
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 gameTable thumbHeader">
        </div>
        <div class="col-sm-4 gameTable nameHeader">
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Name).ToHtmlString(), "Index", new { sortOrder = "Name" }, new { @class = "bigSort" })<p class="bigSort">&#8645</p>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Name).ToHtmlString(), "Index", new { sortOrder = "Name" }, new { @class = "smallSort" })<p class="smallSort">&#8645</p>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Rating).ToHtmlString(), "Index", new { sortOrder = "Rating" }, new { @class = "smallSort" })<p class="smallSort">&#8645</p>
        </div>
        <div class="col-sm-2 gameTable ratingHeader">
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Rating).ToHtmlString(), "Index", new { sortOrder = "Rating" }, new { @class = "bigSort" })<p class="bigSort">&#8645</p>
        </div>
        <div class="col-sm-3 gameTable">

        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm-3 gameTable thumbCell">
                <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" width="128" height="128" alt="Thumbnail" />
            </div>
            <div class="col-sm-4 gameTable nameCell">
                @{
                    string name = item.Name;
                }
                @Html.ActionLink(name, "Details", new { id = item.Id })
            </div>
            <div class="col-sm-2 gameTable ratingCell">
                <p>@Html.DisplayFor(modelItem => item.Rating)/10</p>
            </div>
            <div class="col-sm-3 gameTable ratingCell">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </div>
    }
</div>



