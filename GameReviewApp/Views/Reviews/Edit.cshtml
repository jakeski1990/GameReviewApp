@model GameReviewApp.Models.ReviewListViewModel
@{
    ViewBag.Title = "Edit Review";
    string name = Model.GameName;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Review For @name</title>
</head>
<body>
